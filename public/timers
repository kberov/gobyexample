      codeLines.push('');codeLines.push('package main\u000A');codeLines.push('import (\u000A    \"fmt\"\u000A    \"time\"\u000A)\u000A');codeLines.push('func main() {\u000A');codeLines.push('    срочник1 :\u003D time.NewTimer(2 * time.Second)\u000A');codeLines.push('    \u003C-срочник1.C\u000A    fmt.Println(\"`срочник1` звънна.\")\u000A');codeLines.push('    срочник2 :\u003D time.NewTimer(time.Second)\u000A    go func() {\u000A        \u003C-срочник2.C\u000A        fmt.Println(\"Пуснахме срочник2.\")\u000A    }()\u000A    stop2 :\u003D срочник2.Stop()\u000A    if stop2 {\u000A        fmt.Println(\"Спряхме срочник2.\")\u000A    }\u000A');codeLines.push('    time.Sleep(2 * time.Second)\u000A}\u000A');codeLines.push('');
