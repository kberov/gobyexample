      var codeLines = [];
      codeLines.push('');codeLines.push('package main\u000A');codeLines.push('import (\u000A    \"fmt\"\u000A    \"time\"\u000A)\u000A');codeLines.push('func main() {\u000A');codeLines.push('    i :\u003D 2\u000A    fmt.Print(\"Пишем \", i, \" като \")\u000A    switch i {\u000A    case 1:\u000A        fmt.Println(\"едно\")\u000A    case 2:\u000A        fmt.Println(\"две\")\u000A    case 3:\u000A        fmt.Println(\"три\")\u000A    }\u000A');codeLines.push('    switch time.Now().Weekday() {\u000A    case time.Saturday, time.Sunday:\u000A        fmt.Println(\"Почивен ден е.\")\u000A    default:\u000A        fmt.Println(\"Работен ден е.\")\u000A    }\u000A');codeLines.push('    t :\u003D time.Now()\u000A    switch {\u000A    case t.Hour() \u003C 12:\u000A        fmt.Println(\"Преди обяд е.\")\u000A    default:\u000A        fmt.Println(\"След обяд е.\")\u000A    }\u000A');codeLines.push('    каквоСъмАз :\u003D func(i interface{}) {\u000A        switch t :\u003D i.(type) {\u000A        case bool:\u000A            fmt.Println(\"Аз съм булева стойност – bool.\")\u000A        case int:\u000A            fmt.Println(\"Аз съм цяло число – int.\")\u000A        default:\u000A            fmt.Printf(\"Непознат тип – %T\\n\", t)\u000A        }\u000A    }\u000A    каквоСъмАз(true)\u000A    каквоСъмАз(1)\u000A    каквоСъмАз(\"Ей!\")\u000A}\u000A');codeLines.push('');
