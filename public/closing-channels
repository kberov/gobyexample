      var codeLines = [];
      codeLines.push('');codeLines.push('package main\u000A');codeLines.push('import \"fmt\"\u000A');codeLines.push('func main() {\u000A    задачки :\u003D make(chan int, 5)\u000A    готово :\u003D make(chan bool)\u000A');codeLines.push('    go func() {\u000A        for {\u000A            з, още :\u003D \u003C-задачки\u000A            if още {\u000A                fmt.Println(\"получих задачка\", з)\u000A            } else {\u000A                fmt.Println(\"получих всички задачки\")\u000A                готово \u003C- true\u000A                return\u000A            }\u000A        }\u000A    }()\u000A');codeLines.push('    for з :\u003D 1; з \u003C\u003D 3; з++ {\u000A        задачки \u003C- з\u000A        fmt.Println(\"изпратена задачка\", з)\u000A    }\u000A    close(задачки)\u000A    fmt.Println(\"изпратени са всичи задачки\")\u000A');codeLines.push('    \u003C-готово\u000A');codeLines.push('    оз, имаОще :\u003D \u003C-задачки\u000A    fmt.Println(\"има още задачки:\", оз, имаОще)\u000A}\u000A');codeLines.push('');codeLines.push('');
